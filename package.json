{
  "name": "vigit",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "npm@10.8.2",
  "scripts": {
    "docker": "docker-compose up -d",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:api\"",
    "dev:frontend": "npm run dev -w frontend",
    "dev:api": "sudo -E dotnet watch run --project packages/api/Api.csproj",
    "build": "npm run build:frontend && npm run build:api",
    "build:frontend": "npm run build -w frontend",
    "build:api": "dotnet publish packages/api -c Release -o ./publish",
    "test": "dotnet test tests/Api.Tests/Api.Tests.csproj",
    "test:coverage": "dotnet test tests/Api.Tests/Api.Tests.csproj --collect:\"XPlat Code Coverage\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4"
  }
}
